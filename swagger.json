{
  "openapi": "3.0.0",
  "info": {
    "title": "isMutant",
    "version": "1.0.0",
    "description": "Test mercadolibre"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/mutant/": {
      "post": {
        "description": "Verificar si sequencia de ADN es mutante",
        "tags": [
          "isMutant"
        ],
        "requestBody": {
          "description": "Sequencia ADN",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DnaSchema"
              },
              "example": {
                "dna": ["AAAA", "GTCA", "TGCA", "GGTA"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Es mutante",
            "content": {
              "appication/json": {
                "example": {
                  "status": 200,
                  "message": "OK"
                }
              }
            }
          },
          "403": {
            "description": "NO es mutante",
            "content": {
              "application/json": {
                "example": {
                  "status": 403,
                  "message": "Forbidden"
                }
              }
            }
          }
        }
      }
    },
    "/api/stats": {
      "get": {
        "description": "Obtener estadísticas de verificaciones de ADN",
        "tags": [
          "stats"
        ],
        "responses": {
          "200": {
            "description": "Un objeto con estadísticas",
            "content": {
              "application/json": {
                "schema": {
                  "properties" : {
                    "mutacount_mutant_dnant": {
                      "type": "integer"
                    },
                    "count_human_dna": {
                      "type": "integer"
                    },
                    "ratio": {
                      "type": "decimal"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DnaSchema": {
        "required": [
          "dna"
        ],
        "properties": {
          "dna": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Stats": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "mutacount_mutant_dnant": {
              "type": "integer"
            },
            "count_human_dna": {
              "type": "integer"
            },
            "ratio": {
              "type": "decimal"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "status",
          "message"
        ],
        "properties": {
          "status": {
            "type": "integer",
            "description": "HTTP status code",
            "example": 200
          },
          "message": {
            "type": "string",
            "description": "Error description",
            "example": "User created"
          }
        }
      }
    }
  },
  "tags": []
}